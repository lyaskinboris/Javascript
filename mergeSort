function merge(left, middleLeft, middleRight, rigth) {
	if (left < middleLeft)
		merge(
			left,
			Math.floor((left + middleLeft) / 2),
			Math.floor((left + middleLeft) / 2) + 1,
			middleLeft
		);
	if (middleRight < rigth)
		merge(
			middleRight,
			Math.floor((middleRight + rigth) / 2),
			Math.floor((middleRight + rigth) / 2) + 1,
			rigth
		);
	mergeItems(left, middleLeft, middleRight, rigth);
}
function mergeItems(left, middleLeft, middleRight, rigth) {
	var tempArray = [];
	var indexOfTempArray = 0;
	var leftInit = left,
		rigthInit = rigth;

	while (left <= middleLeft && middleRight <= rigth)
		if (array[left] > array[middleRight])
			tempArray[indexOfTempArray++] = array[middleRight++];
		else tempArray[indexOfTempArray++] = array[left++];

	while (left <= middleLeft) 
	  tempArray[indexOfTempArray++] = array[left++];
	while (middleRight <= rigth)
		tempArray[indexOfTempArray++] = array[middleRight++];
		
	for (var iter = leftInit, iterTemp = 0; iter <= rigthInit; ++iter, ++iterTemp)
		array[iter] = tempArray[iterTemp];
}
var array = [5, 4, 3, 2, 1, 0];
merge(
	0,
	Math.floor(array.length / 2),
	Math.floor(array.length / 2) + 1,
	array.length - 1
);

